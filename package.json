{
  "name": "code-mole",
  "version": "1.0.0",
  "description": "An intelligent code review assistant that digs deep into your code to find issues and suggests helpful learning resources",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/handlers/webhook.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "deploy": "./scripts/deploy.sh",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "code-review",
    "ai",
    "aws-bedrock",
    "github",
    "typescript",
    "lambda"
  ],
  "author": "HasutoSasaki",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.143",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.632.0",
    "@aws-sdk/client-sqs": "^3.632.0"
  }
}
